        <button type='button' class='back-button' onclick="window.location.href='school_result_input.html'">Back to Form</button>
    </div>
    <script>
        // global variable
        let subjects = [];
        let semester = "";
        let studentName = "";
        let overallGPA = "";

        document.addEventListener('DOMContentLoaded', function() {
            // লোকাল স্টোরেজ থেকে ডেটা লোড করা
            studentName = localStorage.getItem('studentName');
            semester = localStorage.getItem('semester');
            overallGPA = localStorage.getItem('overallGPA');
            subjects = JSON.parse(localStorage.getItem('subjects'));

            // যদি কোনো ডেটা না থাকে, তাহলে একটি মেসেজ দেখানো
            if (!studentName || !subjects || subjects.length === 0) {
                document.body.innerHTML = "<div class='container'><h1 style='color:red;'>No result data found. Please go back and create a result sheet.</h1><a href='school_result_input.html' class='back-button'>Go Back</a></div>";
                return;
            }

            // HTML এলিমেন্টগুলোতে ডেটা দেখানো
            document.querySelector('.card_header h4').textContent = studentName;
            document.querySelector('.card_body p strong').textContent = `Overall GPA: ${overallGPA}`;

            const tableBody = document.querySelector('.table tbody');
            tableBody.innerHTML = '';

            // প্রতিটি সাবজেক্টের জন্য একটি করে রো তৈরি করা
            subjects.forEach(subject => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${subject.name}</td>
                    <td>${subject.mark}</td>
                    <td>${semester}</td>
                    <td>${subject.grade}</td>
                    <td>${subject.gpa.toFixed(2)}</td>
                `;
                tableBody.appendChild(row);
            });
        });

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Student Info যোগ করা
            doc.setFontSize(14);
            doc.text("Student Name: " + studentName, 14, 20);
            doc.text("Overall GPA: " + overallGPA, 14, 30);

            // Table data তৈরি
            const tableData = subjects.map(subject => [
                subject.name,
                subject.mark,
                semester,
                subject.grade,
                subject.gpa.toFixed(2)
            ]);

            // হেডার
            const headers = [["Subject", "Mark", "Semester", "Grade", "GPA"]];

            // AutoTable ব্যবহার
            doc.autoTable({
                head: headers,
                body: tableData,
                startY: 40 // টেবিল শুরু হবে student info এর নিচ থেকে
            });

            // PDF download
            doc.save(studentName + "_ResultSheet.pdf");
        }
    </script>
